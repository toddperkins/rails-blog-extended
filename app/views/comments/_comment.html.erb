<div class="comment">
  
  <p>
    <strong>Posted by:</strong>
    <%= comment.commenter %>
  </p>

  <p><%= comment.body %></p>
  <%= link_to "Delete", article_comment_path(comment.article.id, comment), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              }, class: "btn btn-danger" %>
</div>